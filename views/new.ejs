<%- include("partials/header") %>

    <div class="container">
        <div class="row">
            <h2 style="text-align: center;">Create a new place for fellow travellers</h2>
            <div style="width: 30%; margin: 25px auto">
                <form action="/places" method="post">
                    <div class="form-group">
                        <input class="form-control" type="text" name="place_name" placeholder="Name of the Place" id="">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="number" name="price" placeholder="Approximate Budget needed per person per day" id="" min="1" step="1">
                    </div>

                    <div class="form-group">
                        <input class="form-control" type="text" name="image" id="" placeholder="image url">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="description" id="" placeholder="Description about place">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block" type="submit">Submit!</button>
                    </div>

                </form>
                <a href="/places"> Go back!</a>
            </div>
        </div>

    </div>


    <%- include("partials/footer") %>